{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "headers": [{
    "source": "**/*.jpg",
    "headers": [
      {
      "key" : "Access-Control-Allow-Origin",
      "value" : "*"
    }
  ]
  }],
  
  "hosting": {
    
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
  
}
